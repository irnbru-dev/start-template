{
  "ignorePatterns": ["src/js/vendor/*", "public/*"],
  "env": {
    "es6": true,
    "amd": true,
    "node": true,
    "browser": true
  },
  "extends": "eslint:recommended",
  "rules": {
    "indent": ["error", 2],
    "quotes": ["error", "single"],
    "semi": ["error", "always"],
    "no-console": "off"
  }
}
